{
  "compilerOptions": {
    "allowJs": true,
    "allowUnreachableCode": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitUseStrict": false,
    "strictNullChecks": true,
    "target": "es6",
    "outDir": "./dist",
    "inlineSourceMap": true,
    "removeComments": true,
    "pretty": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@db/*": ["db/*"],
      "@root/*": ["./*"],
      "@api/*": ["api/*"],
      "@utils/*": ["utils/*"],
      "@errors/*": ["errors/*"],
      "@middlewares/*": ["middlewares/*"],
      "@interfaces/*": ["interfaces/*"],
      "@db": ["db"],
      "@api": ["api"],
      "@utils": ["utils"],
      "@errors": ["errors"],
      "@middlewares": ["middlewares"],
      "@interfaces": ["interfaces"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*"]
}
